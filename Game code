#include <iostream>
#include <string>
#include <vector>

struct Question {
    std::string question;
    std::vector<std::string> options;
    int correctAnswer;
};

int main() {
    std::vector<Question> questions = {
        {"What is the capital of France?", {"London", "Berlin", "Paris", "Rome"}, 3},
        {"What is the capital of Italy?", {"London", "Berlin", "Paris", "Rome"}, 4},
        {"What is the capital of Germany?", {"London", "Berlin", "Paris", "Rome"}, 2},
	{"What is the capital of England?", {"London", "Berlin", "Paris", "Rome"}, 1},
        // Add more questions here
    };

    int maxAttempts = 3;

    for (auto& q : questions) {
        std::cout << q.question << std::endl;
        int optionNumber = 1;
        for (auto& option : q.options) {
            std::cout << optionNumber << ". " << option << std::endl;
            optionNumber++;
        }

        int attempts = 0;
        while (attempts < maxAttempts) {
            int userAnswer;
            std::cout << "Enter your choice (1-4): ";
            std::cin >> userAnswer;

            if (userAnswer == q.correctAnswer) {
                std::cout << "Correct!" << std::endl;
                break;
            }
            else {
                attempts++;
                if (attempts < maxAttempts) {
                    std::cout << "Incorrect. Try again." << std::endl;
                }
                else {
			std::cout << "Incorrect. The correct answer is " << q.options[q.correctAnswer - 1] << std::endl;
		}    
              
            }
        }
    }

return 0;
}
